<SeenPage>
	apps: app
	roots: root
	MDBoxLayout:
		orientation: "vertical"
		md_bg_color: get_color_from_hex("a050f0") if app.theme_cls.theme_style == "Light" else get_color_from_hex("#010101")
		MDBoxLayout:
			size_hint: 1, None
			height: toolbar.height
			MDTopAppBar:
			    id: toolbar
			    material_style: "M3"
			    title: "Gomycode - coding whith python"
			    anchor_title: "center"
			    bold: True
			    font_style: "H2"
			    md_bg_color: get_color_from_hex("a55aff")
			    pos_hint: {"top": 1}
		MDBoxLayout:
			padding: "10dp", "10dp", "5dp", "2dp"
			orientation: "vertical"
		    ScrollView:
				do_scroll_x: False
				#effect_cls: app.effet
				do_scroll_y: True
				#bar_width: app.my_bar_width
				bar_margin: "-5sp"
				smooth_scroll_end: 10
				bar_color: app.theme_cls.primary_dark
				bar_inactive_color: app.theme_cls.primary_light
				scroll_type: ['bars', 'content']

				MDBoxLayout:  # Contenue de la ScrollVieuw
					orientation: "vertical"
					size_hint: 1, None
					#adaptive_height: True
					height: self.minimum_height
					padding: [0, "10dp"]
					spacing: "30dp"
					#height: couleur.height + texte.height + 500
					MDBoxLayout:
						size_hint: 1, None
						height: "50dp"
						MDLabel:
							id: cours_title
							text: str(root.cours_title)
							theme_text_color: "Custom"
						    text_color: 1, 1, 1, 1
						    markup: True
							font_style: "H5"
							height: self.texture_size[1]
							halign: "center"
					MDSeparator:
						size_hint: 1, None
						height: 2
					MDBoxLayout:
						size_hint: 1, None
						height: "650dp"
						MDLabel:
							id: explane_text
							text: root.text
							theme_text_color: "Custom"
						    text_color: 1, 1, 1, 1
							font_style: "H5"
							markup: True
							height: self.texture_size[1]
							halign: "justify"
					MDBoxLayout:
						size_hint: 1, None
						height: "200dp"
						MDCard:
							size_hint: None, None
							width: root.width-15
							height: "55dp"
							pos_hint: {"center_x": .5, "center_y": .5}
							md_bg_color: [1, 0, 0, 0.6] if app.theme_cls.theme_style == "Light" else content_scroll.md_bg_color
							ripple_behavior: True
							# elevation: 6# if app.theme_cls.theme_style == "Light" else 0
							radius: ["15dp"]
							on_release:
								root.ret_summary()
							MDLabel:
								id: fermer
								text: "Terminer le cours"
								bold: True
								halign: "center"
